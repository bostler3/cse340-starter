<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Messages -->
<%- messages() %>

<!-- Errors -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<!-- Account Management view to display -->
<div class="view-container">
    <h2>Welcome, <%= accountData.account_firstname %>!</h2>
    <p id="account-management-message">You're logged in</p>
    <p><a href="/account/edit-account/<%= accountData.account_id %>" title="Click to edit your account">Edit Account Information</a></p>
    <p><a href="/account/messaging" title="Click to access the messaging system">Messaging System</a></p>
    <% if (accountData.account_type == "Employee" || accountData.account_type == "Admin") { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/management" title="Click to navigate to Inventory Management page">Manage Inventory</a></p>
    <% } %>    
</div>