<!-- Content Heading -->
<% if (title) { %>
<h1>
<%= title %>
</h1>
<% } else { res.redirect('/') } %>

<!-- Messages -->
<%- messages() %>

<!-- Errors -->
<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error=> { %>
    <li>
        <%= error.msg %>
    </li>
    <% }) %>
</ul>
<% } %>

<!-- Messaging System view to display -->
<div class="view-container">
    <h2><a href="/account/send-message"
            title="Click to send a message">Send a Message</a></h2>
    <h2>Inbox</h2>
    <%- inbox %>
</div>